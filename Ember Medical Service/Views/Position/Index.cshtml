@model IEnumerable<Ember_Medical_Service.Data.ListOfPositionsVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New <i class="fa fa-plus-circle" aria-hidden="true"></i></a>
</p>
<table id="TableData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                     
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new {@class = "btn btn-warning"}) 

                    <a asp-action="Edit" class="btn btn-outline-info" asp-route-id="@item.ID">Edit <i class="fa fa-pencil-square-o" aria-hidden="true"> </i></a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ID" onclick="return confirm ('Do you want to delete this info?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready( function () {
            $('#TableData').DataTable();
        } );
    </script>
}
