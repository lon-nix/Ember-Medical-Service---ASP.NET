@model IEnumerable<EmberMedicalServicePortal.Models.ApplicationUser>

@{
    ViewData["Title"] = "Index";
}

<h1>List</h1>

@if (Model.Any())
{
    foreach (var user in Model)
    {
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                User ID : @user.Id
            </div>
            <img src="~/img/avtar.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Name: :</h5>
                <h5 class="card-subtitle mb-2 text-muted"> @user.FirstName @user.LastName</h5>

                <h5 class="card-title">Email Address:</h5>
                <h5 class="card-subtitle mb-2 text-muted"> @user.Email</h5>

            </div>
            <div class="card-footer">

                <a class="btn btn-primary" style="width:auto" asp-area="Identity" asp-page="/Account/Register">
                    <i class="fa fa-plus-square" aria-hidden="true"></i>
                </a>
                <a asp-action="Edit" class="btn btn-outline-secondary" asp-route-id="@user.Id">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                </a>
                <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@user.Id">
                <i class="fa fa-info-circle" aria-hidden="true"></i></a>


                @*<button type="submit" class="btn btn-outline-danger" asp-route-id="@user.Id" onclick="return confirm ('Do you want to delete?')">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                </button>*@
                <form asp-action="Delete">
                    <input type="hidden" asp-for="@user.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    
                </form>

            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">

        </div>
        <img src="..." class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">User</h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="" asp-action=""> Add User</a>
        </div>
    </div>
}
